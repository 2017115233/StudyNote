<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="12.5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/ont_key_drainage"
            android:textColor="@color/color1"
            android:textSize="17sp" />

        <android.widget.TextClock
            android:id="@+id/titleClock"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="12.5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:format12Hour="hh:mm a"
            android:format24Hour="HH:mm"
            android:gravity="right"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/tipLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tipText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="4.5dp"
                    android:paddingRight="4.5dp"
                    android:ellipsize="none"
                    android:gravity="left"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:text="@string/drainage_tip1"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tipLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tipText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="18dp"
                    android:paddingLeft="4.5dp"
                    android:paddingRight="4.5dp"
                    android:ellipsize="none"
                    android:gravity="left"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:text="@string/drainage_tip2"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tipLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tipText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="4.5dp"
                    android:paddingRight="4.5dp"
                    android:paddingBottom="15dp"
                    android:ellipsize="none"
                    android:gravity="left"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:text="@string/drainage_tip3"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

